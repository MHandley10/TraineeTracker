@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Title" class="form-control" placeholder="Please enter your title."/>
                <label asp-for="Input.Title" class="form-label"></label>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name."/>
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
          <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your family name."/>
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AboutMe" class="control-label"></label>
                <textarea maxlength="499" asp-for="Input.AboutMe" class="form-control rounded-0" rows="10"></textarea>
                <span asp-validation-for="Input.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Education" class="control-label"></label>
                <textarea maxlength="499" asp-for="Input.Education" class="form-control rounded-0" rows="10"></textarea>
                <span asp-validation-for="Input.Education" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Experience" class="control-label"></label>
                <textarea maxlength="499" asp-for="Input.Experience" class="form-control rounded-0" rows="10"></textarea>
                <span asp-validation-for="Input.Experience" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating mb-3">
                <input asp-for="Input.Skills" class="form-control" placeholder="Please enter your information."/>
                <label asp-for="Input.Skills" class="form-label"></label>
                <span asp-validation-for="Input.Skills" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
